/**index.wxss**/

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.slider image {
  width: 100%;
  height: 380rpx;
}

.index-nav {
  display: flex;
  flex-wrap: wrap;
}

.index-nav .nav-item {
  width: 33.33%;
  height: 200rpx;
  border: 1px solid #ccc;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;
}

.index-nav image {
  width: 80rpx;
  height: 80rpx;
}

.index-nav .nav-item:nth-child(3n) {
  border-right: 0 none;
}

.index-enter image {
  width: 320rpx;
  height: 178rpx;
}

.index-enter{
  display: flex;
  padding: 20rpx 30rpx;
}

.index-enter .enter-item{
  width: 50%;
  display: flex;
  justify-content: center;
}