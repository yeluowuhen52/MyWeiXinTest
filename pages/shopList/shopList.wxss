/* pages/shopList/shopList.wxss */

page {
  background-color: #fff;
}

.shop {
  padding: 20rpx;
  border-bottom: 1rpx solid #ddd;
  display: flex;
}

.shop-image {
  width: 160rpx;
  height: 160rpx;
  margin-right: 20rpx;
}

.shop-info {
  width: 520rpx;
  display: flex;
  flex-direction: column;
  font-size: 12px;
  color: #666;
}

.shop-star{
    position: absolute;
    right:20rpx;
    top:20rpx;
}

.shop-title {
  font-size: 16px;
  color: #333;
  line-height: 1.5;
  width: 380rpx;

}




